@page
@model Website_Demo.Pages.FeatureA
@using Microsoft.FeatureManagement
@inject IFeatureManager FeatureManager

@{
    ViewData["Title"] = "FeatureA";
}

<h1>@ViewData["Title"]</h1>

@if (await FeatureManager.IsEnabledAsync("FeatureA"))
{
    <!-- FeatureA is enabled message -->
    <div class="alert alert-success">
        <strong>FeatureA is enabled!</strong> You can access this feature.
    </div>
}
else
{
    <!-- FeatureA is disabled message -->
    <div class="alert alert-warning">
        <strong>FeatureA is not enabled at the moment.</strong> Please check back later.
    </div>
}
